<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
		xmlns:abControls="using:CarinaStudio.Controls"
		xmlns:asControls="using:CarinaStudio.AppSuite.Controls"
        xmlns:app="using:CarinaStudio.ULogViewer"
        xmlns:appControls="clr-namespace:CarinaStudio.ULogViewer.Controls;assembly=ULogViewer"
        xmlns:appConverters="clr-namespace:CarinaStudio.ULogViewer.Converters;assembly=ULogViewer"
        xmlns:appLogs="clr-namespace:CarinaStudio.ULogViewer.Logs;assembly=ULogViewer"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CarinaStudio.ULogViewer.Controls.LogPatternEditorDialog"
        Classes="Dialog"
        Title="{DynamicResource String/LogPatternEditorDialog.Title}"
        Width="{DynamicResource Double/LogPatternEditorDialog.Width}">
	
	<!-- Content -->
	<DockPanel>

		<!-- Control buttons -->
		<Border Classes="Dialog_ControlButtonsPanel">
			<StackPanel Classes="Dialog_ControlButtonsPanel">
				<Button Classes="Dialog_ControlButton" Command="{Binding $parent[Window].GenerateResultCommand}" Content="{DynamicResource String/Common.OK}"/>
				<Button Classes="Dialog_ControlButton" Command="{Binding $parent[Window].Close}" Content="{DynamicResource String/Common.Cancel}"/>
			</StackPanel>
		</Border>

		<!-- Content -->
		<StackPanel Classes="Dialog_ContentPanel">

			<!-- Regex -->
			<TextBlock Classes="Dialog_TextBlock" Text="{DynamicResource String/LogPatternEditorDialog.Regex}"/>
			<asControls:RegexTextBox Name="regexTextBox" Height="{DynamicResource Double/LogPatternEditorDialog.RegexInput.Height}" IgnoreCase="False" PropertyChanged="OnRegexTextBoxPropertyChanged" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
			<TextBlock Classes="Dialog_TextBlock_Description" Text="{DynamicResource String/LogPatternEditorDialog.Regex.Description}"/>
			<abControls:LinkTextBlock Classes="Dialog_LinkTextBlock_Description" Text="{DynamicResource String/Common.RegularExpression.Reference}" Uri="{x:Static app:Uris.RegexReference}"/>
			<Separator Classes="Dialog_Separator"/>

			<!-- Test -->
			<TextBlock Classes="Dialog_TextBlock" Text="{DynamicResource String/LogPatternEditorDialog.TestLogLine}"/>
			<TextBox Classes="Dialog_TextBox" Height="{DynamicResource Double/LogPatternEditorDialog.TestLogLine.Height}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" Text="{Binding $parent[Window].TestLogLine, Mode=TwoWay}" TextWrapping="Wrap" Watermark="{DynamicResource String/LogPatternEditorDialog.TestLogLine.Watermark}"/>
			<Separator Classes="Dialog_Separator"/>
			<StackPanel Orientation="Horizontal">
				<TextBlock Classes="Dialog_TextBlock" Text="{DynamicResource String/LogPatternEditorDialog.TestResult}" VerticalAlignment="Center"/>
				<Separator Classes="Dialog_Separator_Small"/>
				<Panel IsVisible="{Binding $parent[Window].HasTestResult}" VerticalAlignment="Center">
					<TextBlock Classes="Dialog_TextBlock" HorizontalAlignment="Left" IsVisible="{Binding $parent[Window].TestResult}" Text="{DynamicResource String/LogPatternEditorDialog.TestResult.Success}" VerticalAlignment="Center"/>
					<TextBlock Classes="Dialog_TextBlock" HorizontalAlignment="Left" IsVisible="{Binding !$parent[Window].TestResult}" Text="{DynamicResource String/LogPatternEditorDialog.TestResult.Failed}" VerticalAlignment="Center"/>
				</Panel>
			</StackPanel>
			<ListBox Classes="Dialog_ListBox" Height="{DynamicResource Double/LogPatternEditorDialog.CapturedLogProperties.Height}" Items="{Binding $parent[Window].CapturedLogProperties}">
				<ListBox.DataTemplates>
					<DataTemplate>
						<TextBlock>
							<TextBlock.Text>
								<MultiBinding StringFormat="{}{0} = {1}">
									<Binding Path="Item1"/>
									<Binding Path="Item2"/>
								</MultiBinding>
							</TextBlock.Text>
						</TextBlock>
					</DataTemplate>
				</ListBox.DataTemplates>
			</ListBox>
			<Separator Classes="Dialog_Separator"/>

			<!-- Repeatable -->
			<TextBlock Classes="Dialog_TextBlock" Text="{DynamicResource String/LogPatternEditorDialog.IsRepeatable}"/>
			<ToggleSwitch Name="repeatableSwitch" Classes="Dialog_ToggleSwitch"/>
			<Separator Classes="Dialog_Separator"/>

			<!-- Skippable -->
			<TextBlock Classes="Dialog_TextBlock" Text="{DynamicResource String/LogPatternEditorDialog.IsSkippable}"/>
			<ToggleSwitch Name="skippableSwitch" Classes="Dialog_ToggleSwitch"/>
			
		</StackPanel>
		
	</DockPanel>
	
</Window>
